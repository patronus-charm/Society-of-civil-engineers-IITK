                        var temp = document.getElementById("activities");
                        funs.scrollIntoView();


                    }

                    var temp = document.getElementById("activities");
                    function upArrow() {
                        funs.style.display = "none";
                        temp.scrollIntoView();
                    }

                    var mag = document.getElementById("strength");
                    function strength() {
